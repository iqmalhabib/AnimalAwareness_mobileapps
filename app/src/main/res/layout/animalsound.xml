<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalSoundActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#68BBE3"
        android:text="@string/animal_sound"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        />

    <ImageButton
        android:id="@+id/image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/baseline_home_24"
        android:contentDescription="@string/gohome"
        android:background="@android:color/transparent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="990dp"
        android:layout_below="@id/image_btn"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">


        <GridLayout
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3">

        <ImageButton
            android:id="@+id/image_btn1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#68BBE3"
            android:contentDescription="@string/clicklion"
            android:scaleType="fitXY"
            android:src="@drawable/lion"
            tools:ignore="DuplicateIds" />

        <ImageButton
            android:id="@+id/image_btn2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#68BBE3"
            android:contentDescription="@string/clickdog"
            android:scaleType="fitXY"
            android:src="@drawable/dog" />

        <ImageButton
            android:id="@+id/image_btn3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#68BBE3"
            android:contentDescription="@string/clickelephant"
            android:scaleType="fitXY"
            android:src="@drawable/elephant" />

            <ImageButton
                android:id="@+id/image_btn4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#68BBE3"
                android:contentDescription="@string/clicklion"
                android:scaleType="fitXY"
                android:src="@drawable/snake" />

            <ImageButton
                android:id="@+id/image_btn5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#68BBE3"
                android:contentDescription="@string/clickdog"
                android:scaleType="fitXY"
                android:src="@drawable/bird" />

            <ImageButton
                android:id="@+id/image_btn6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#68BBE3"
                android:contentDescription="@string/clickcat"
                android:scaleType="fitXY"
                android:src="@drawable/cat" />

        <!-- Add remaining ImageButtons -->

    </GridLayout>
    </LinearLayout>
</RelativeLayout>
